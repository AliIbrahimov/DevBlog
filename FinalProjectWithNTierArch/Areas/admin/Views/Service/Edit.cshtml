@using Entity.ViewModels.Services

@{
    ViewData["Title"] = "Edit";
}
@model ServicesEditVM
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly"></div>
        <input hidden asp-for="getVM.Id" />

        <label asp-for="postVM.Name">Title</label>
        <input class="form-control" asp-for="postVM.Name" value="@Model.getVM.Name" placeholder="Enter title">
    </div>
    <div class="form-group">

        <label asp-for="postVM.Title">Title</label>
        <input class="form-control" asp-for="postVM.Title" value="@Model.getVM.Title" placeholder="Enter title">
    </div>
    @for (int i = 0; i < Model.getVM.ServiceActions.Count; i++)
    {
        <div class="form-group">

            <label asp-for="@Model.getVM.ServiceActions[i].Name">Title</label>
            <input class="form-control" asp-for="@Model.postVM.ServiceActions[i].Name" value="@Model.getVM.ServiceActions[i].Name" placeholder="Enter action name">
        </div>
    }

    <button type="submit" class="btn btn-primary">Submit</button>
</form>


