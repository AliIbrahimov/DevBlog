@using Entity.Concrete
@{
    ViewData["Title"] = "UserEdit";
}

@model AppUser
<div class="container-fluid bg-primary py-5 bg-header2">
</div>
<section style="background: rgba(9, 30, 62, .7); ">
    <div class="container py-5">
        <div class="row">
            <div class="col">

                <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4 d-flex justify-content-between">

                    <h1>Profile</h1>
                </nav>
            </div>
        </div>
        <form method="post" enctype="multipart/form-data">

            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            @if (Model.ProfileImage is null)
                            {
                                <img src="/assets//img/avatar.webp" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">
                            }
                            else
                            {
                                <img src="/assets//img/@Model.ProfileImage" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">
                            }

                            <div asp-validation-summary="ModelOnly"></div>
                            <input hidden asp-for="@Model.Id" />
                            <div class="card-body">
                                <div class="form-group">

                                    <label asp-for="@Model.FormFile"></label>
                                    <input type="file" class="form-control" asp-for="@Model.FormFile">
                                </div>
                                <hr>
                                <div class="form-group">
                                    <div asp-validation-summary="ModelOnly"></div>
                                    <input hidden asp-for="@Model.Id" readonly />

                                </div>
                            </div>


                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">

                            <div class="form-group">

                                <div asp-validation-summary="ModelOnly"></div>
                                <input hidden asp-for="@Model.Id" />

                                <label asp-for="@Model.UserName">Username</label>
                                <input class="form-control" asp-for="@Model.UserName" value="@Model.UserName" readonly />
                            </div>
                            <hr>
                            <div class="form-group">

                                <label asp-for="@Model.Name">Name</label>
                                <input class="form-control" asp-for="@Model.Name" value="@Model.Name" placeholder="Enter name">
                            </div>
                            <hr>
                            <div class="form-group">

                                <label asp-for="@Model.Surname">Surname</label>
                                <input class="form-control" asp-for="@Model.Surname" value="@Model.Surname" placeholder="Enter surname">
                            </div>
                            <hr>
                            <div class="form-group">

                                <label asp-for="@Model.Email">Email</label>
                                <input class="form-control" asp-for="@Model.Email" value="@Model.Email" readonly>
                            </div>
                            <hr>
                            <div class="form-group">

                                <label asp-for="@Model.PhoneNumber">Number</label>
                                <input class="form-control" asp-for="@Model.PhoneNumber" value="@Model.PhoneNumber" placeholder="Enter number">
                            </div>
                            <hr>
                            <div class="form-group">

                                <label asp-for="@Model.Adress">Address</label>
                                <input class="form-control" asp-for="@Model.Adress" value="@Model.Adress" placeholder="Enter address">
                            </div>
                            <div>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>


                        </div>
                    </div>




                </div>

            </div>
        </form>
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</section>




