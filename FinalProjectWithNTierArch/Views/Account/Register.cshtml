@using Entity.ViewModels.AppUser

@{
    ViewData["Title"] = "Register";
    Layout = null;
}
@model RegisterVM
<link href="~/assets/css/bootstrap.min.css" rel="stylesheet">

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-50">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <form class="mx-1 mx-md-4" method="post">

                                    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="Username" class="form-label"></label>

                                            <input asp-for="Username" class="form-control" />
                                            <span asp-validation-for="Username"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="Mail" class="form-label"></label>

                                            <input asp-for="Mail" class="form-control" />
                                            <span asp-validation-for="Mail"></span>

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="Password" class="form-label"></label>

                                            <input asp-for="Password" class="form-control" />
                                            <span asp-validation-for="Password"></span>

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="ConfirmedPassword" class="form-label"></label>

                                            <input asp-for="ConfirmedPassword" class="form-control" />
                                            <span asp-validation-for="ConfirmedPassword"></span>

                                        </div>
                                    </div>


                                    <div class="form-c heck">
                                        <input asp-for="isDeveloper" class="form-check-input">
                                        <label asp-for="isDeveloper" class="form-check-label">
                                            I am developer
                                        </label>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                    </div>
                                    <p class="loginhere">
                                        Have already an account ? <a asp-controller="account" asp-action="login" class="loginhere-link">Login here</a>
                                    </p>
                                </form>


                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


