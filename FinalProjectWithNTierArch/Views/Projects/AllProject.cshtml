@using Entity.ViewModels.Pagination
@using Entity.ViewModels.Project

@{
    ViewData["Title"] = "AllProject";
}

@model PaginationVM<ProjectGetVM>

<!-- Full Screen Search End -->
<!-- Blog Start -->
<div class="container-fluid bg-primary py-5 bg-header" style="margin-bottom: 40px;">
    <div class="row ">
        <div class="col-12 pt-lg-5 mt-lg-5 text-center">
            <h1 class="display-4 text-white animated zoomIn">Project Grid</h1>
            <a href="" class="h5 text-white">Home</a>
            <i class="far fa-circle text-white px-2"></i>
            <a href="" class="h5 text-white">Blog Grid</a>
        </div>
    </div>
</div>
    </div>
<!-- Navbar End -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row ">
            <!-- Blog list Start -->
            <div class="col-lg-8">
                <div class="row g-5">
                    @foreach (var item in Model.Models)
                    {
                        <div class="col-md-6 wow slideInUp" data-wow-delay="0.1s">
                            <div class="blog-item bg-light rounded overflow-hidden">
                                <div class="blog-img position-relative overflow-hidden">
                                    <img class="img-fluid" src="~/assets/img/@item.Image" alt="">
                                    <a class="position-absolute top-0 start-0 bg-primary text-white rounded-end mt-5 py-2 px-4" href="">@item.Name</a>
                                </div>
                                <div class="p-4">
                                    <div class="d-flex mb-3">
                                        <small class="me-3"><i class="far fa-user text-primary me-2"></i>@item.AuthorName</small>
                                        <small><i class="far fa-calendar-alt text-primary me-2"></i>@item.CreatedDate</small>
                                    </div>
                                    <h4 class="mb-3">@item.ProjectUrl</h4>
                                    <p>@item.Description</p>
                                    <a class="text-uppercase" asp-controller="Projects" asp-action="Detail" asp-route-id="@item.Id">Read More <i class="bi bi-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- Blog list End -->
           
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.Previous?"":"disabled")">
                    <a class="page-link" asp-controller="Projects" asp-action="AllProject" asp-route-currentpage="@(Model.CurrentPage-1)">Previous</a>
                </li>
                @for (var i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Projects" asp-action="AllProject" asp-route-currentpage="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.NextPage?"":"disabled")">
                    <a class="page-link" asp-controller="Projects" asp-action="AllProject" asp-route-currentpage="@(Model.CurrentPage+1)">Next</a>
                </li>
            </ul>
        </nav>

    </div>
</div>
<!-- Blog End -->

